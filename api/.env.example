# R2 Credentials
# These can be found in your Cloudflare R2 dashboard under "Manage R2 API Tokens".
# Create an API token with read/write permissions for your specific bucket.
R2_ENDPOINT=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME=""

# imgproxy Security Keys
# Generate strong, random hexadecimal strings for these.
# You can use `openssl rand -hex 32` in your terminal to generate a 32-byte (64-character hex) key/salt.
# Example: IMGPROXY_KEY="c0c4e7f9a2b1d3e5f6a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9"
IMGPROXY_KEY=""
IMGPROXY_SALT=""

PORT=3001
NODE_ENV=development
BCRYPT_SALT_ROUNDS=10
# openssl rand -base64 32
JWT_SECRET=""

# JWT Configuration
# IMPORTANT: Generate a strong secret (at least 32 characters for production)
# You can generate one with: openssl rand -base64 32
JWT_EXPIRES_IN="1h"

# Database Configuration
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://app:app_pw@localhost:5432/app_db"

# --- Local Development Overrides (for docker-compose.yml) ---
# These are used by docker-compose.yml when running locally.
# You can create a local .env file to set your own values.

# Database (for docker-compose)
POSTGRES_USER="app"
POSTGRES_PASSWORD="app_pw"
POSTGRES_DB="app_db"

# PGAdmin (for docker-compose)
PGADMIN_DEFAULT_EMAIL="admin@example.com"
PGADMIN_DEFAULT_PASSWORD="admin"

# --- Email Configuration (e.g., SMTP2GO) ---
SMTP_HOST="mail.smtp2go.com"
SMTP_PORT=2525
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="Medical Artists <support@medicalartists.co>"

# --- Feature Flags ---
INVITE_ONLY_SIGNUP="true"
