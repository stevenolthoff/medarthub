generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String      @id @default(uuid())
  name           String
  email          String      @unique
  passwordHash   String
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  username       String      @unique
  artist         Artist?
  usedInviteCode InviteCode?
  role           Role        @default(USER)

  @@map("users")
}

model Artist {
  id               String    @id @default(uuid())
  slug             String    @unique
  headline         String?
  company          String?
  location         String?
  websiteUrl       String?
  about            String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  userId           String    @unique
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  profilePicImageId String?   @unique
  profilePic       Image?    @relation("ArtistProfilePic", fields: [profilePicImageId], references: [id])
  bannerImageId     String?   @unique
  bannerImage       Image?    @relation("ArtistBannerImage", fields: [bannerImageId], references: [id])
  artworks         Artwork[]

  @@map("artists")
}

model Artwork {
  id           String        @id @default(uuid())
  slug         String        @unique
  title        String
  description  String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  artistId     String
  status       ArtworkStatus @default(DRAFT)
  coverImageId String?       @unique
  artist       Artist        @relation(fields: [artistId], references: [id], onDelete: Cascade)
  coverImage   Image?        @relation("ArtworkCover", fields: [coverImageId], references: [id])

  @@map("artworks")
}

model Image {
  id                String   @id @default(uuid())
  key               String   @unique
  filename          String
  contentType       String
  size              Int
  width             Int?
  height            Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  originalArtwork   Artwork? @relation("ArtworkCover")
  profilePicForArtist Artist? @relation("ArtistProfilePic")
  bannerForArtist     Artist? @relation("ArtistBannerImage")

  @@map("images")
}

enum ArtworkStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum Role {
  USER
  ADMIN
}

model AccessRequest {
  id                String              @id @default(uuid())
  name              String
  email             String
  artworkExampleUrl String
  message           String?
  status            AccessRequestStatus @default(PENDING)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  inviteCode        InviteCode?

  @@map("access_requests")
}

enum AccessRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model LaunchSubscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())

  @@map("launch_subscribers")
}

model InviteCode {
  id              String        @id @default(uuid())
  code            String        @unique
  expiresAt       DateTime
  isUsed          Boolean       @default(false)
  accessRequestId String        @unique
  accessRequest   AccessRequest @relation(fields: [accessRequestId], references: [id], onDelete: Cascade)
  createdAt       DateTime      @default(now())
  usedByUserId    String?       @unique
  usedByUser      User?         @relation(fields: [usedByUserId], references: [id], onDelete: SetNull)

  @@map("invite_codes")
}
